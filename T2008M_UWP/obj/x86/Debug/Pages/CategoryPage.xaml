<Page
    x:Class="T2008M_UWP.Pages.CategoryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:T2008M_UWP.Pages"
    xmlns:models="using:T2008M_UWP.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:ConnectionId='2' Text="" x:Name="Title" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>
        <GridView x:ConnectionId='3' x:Name="Products" Margin="0,40,0,0">
            <GridView.ItemTemplate>
                <DataTemplate                         >
                    <GridViewItem x:ConnectionId='5' Margin="10"                             >
                        <StackPanel>
                            <Image Width="150">
                                <Image.Source>
                                    <BitmapImage x:ConnectionId='7'                                   />
                                </Image.Source>
                            </Image>
                            <TextBlock x:ConnectionId='6'                      FontSize="16"/>
                        </StackPanel>
                    </GridViewItem>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

